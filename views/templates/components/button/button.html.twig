{% extends "@tch/components/component/component.html.twig" %}

{% set component_name = "Button" %}

{% set required_props = [label] %}

{% if link %}
  {% set root_element = "a" %}
{% else %}
  {% set root_element = "button" %}
{% endif %}

{% block root_attributes %}
  {% if "icon-only" in modifiers %}
    aria-label="{{ label }}"
    title="{{ label }}"
  {% endif %}

  {% if link %}
    href="{{ link }}"
  {% endif %}

  {% if onclick %}
    onclick="{{ onclick }}"
  {% endif %}
  
  type="{{ type ?: "button" }}"

  {% if controls %}
    aria-controls="{{ controls }}"
  {% endif %}
{% endblock %}

{% block inner_content %}
  {% if icon %}
    {{ include("@tch/icons/#{icon}.svg.twig") }}
  {% endif %}

  {% if "icon-only" not in modifiers %}
    {{ label|raw }}
  {% endif %}
{% endblock %}