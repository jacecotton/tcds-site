{% extends "@tcds/components/component/component.html.twig" %}

{% set component_name = "Tile" %}

{% if link %}
  {% set root_element = "a" %}
{% else %}
  {% set root_element = "article" %}
{% endif %}

{% if background %}
  {% set component_classes = ["bg-#{background}"] %}
{% endif %}

{% block root_attributes %}
  {% if link %} href="{{ link }}" {% endif %}
{% endblock %}

{% block inner_content %}
  {% if icon %}
    {{ include("@tcds/components/icon/icon.html.twig", {
      icon: icon,
      custom_classes: ["Tile__icon"],
    }, with_context = false) }}
  {% endif %}

  {% if heading or subheading %}
    <div class="Tile__text">
      {% if heading %}
        <span class="Tile__heading">{{ heading|raw }}</span>
      {% endif %}
      {% if subheading %}
        <span class="Tile__subheading">{{ subheading|raw }}</span>
      {% endif %}
    </div>
  {% endif %}
{% endblock %}
