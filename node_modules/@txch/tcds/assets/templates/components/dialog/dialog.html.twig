{% extends "@tcds/components/component/component.html.twig" %}

{% set component_name = "Dialog" %}

{% set required_props = [title] %}

{% set id = id ?: "dialog-#{title|clean_id}" %}

{% block root_attributes %}
  hidden
  role="dialog"
  aria-modal="true"
  aria-labelledby="{{ id }}-title"
  id="{{ id }}"
  data-open-onload="{{ open_onload ?: "false" }}"
{% endblock %}

{% block inner_content %}
  <h1 class="visually-hidden" id="{{ id }}-title">{{ title }}</h1>

  <div class="Dialog__content">
    {{ include("@tcds/components/button/button.html.twig", {
      label: "Close dialog",
      icon: "x",
      controls: id,
      modifiers: ["icon-only", "round"],
      custom_classes: ["bg-secondary", "Dialog__close"],
    }, with_context = false) }}

    {% block content %}
      {{ content }}
    {% endblock %}
  </div>
{% endblock %}
