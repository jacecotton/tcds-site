{% extends "@tcds/components/component/component.html.twig" %}

{% set component_name = "Breadcrumb" %}

{% set root_element = "nav" %}

{% block inner_content %}
  <ol class="Breadcrumb__list">
    {% for item in trail %}
      <li class="Breadcrumb__item"><a href="{{ item.link }}" class="Breadcrumb__link">{{ item.title }}</a></li>
    {% endfor %}
  </ol>
{% endblock %}
