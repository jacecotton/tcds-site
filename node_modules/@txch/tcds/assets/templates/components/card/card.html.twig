<div class="is-self-responsive">
  {% embed "@tcds/components/component/component.html.twig" with {
    component_name: "Card",
    root_element: "article",
  } %}

    {% block inner_content %}
      {% if image.url %}
        <figure class="Card__media">
          <img src="{{ image.url }}" alt="{{ image.alt ?: '' }}" class="Card__image">
        </figure>
      {% endif %}

      <div class="Card__body">
        {% if title %}
          {% if link %}
            <a class="Card__title" href="{{ link }}" aria-describedby="{{ content|slice(0, 20)|clean_id }}-action">{{ title|raw }}</a>
          {% else %}
            <span class="Card__title" aria-describedby="{{ content|slice(0, 20)|clean_id }}">{{ title|raw }}</span>
          {% endif %}
        {% endif %}

        {% if content %}
          <div class="Card__content" id="{{ content|slice(0, 20)|clean_id }}">
            {{ content|raw }}
          </div>
        {% endif %}

        {% if link or block(card_end) is defined %}
          <div class="Card__footer">
            {% block card_end %}
              {% if link %}
                <a
                  href="{{ link }}"
                  class="
                    {% if "compact" not in modifiers %}
                      Button Button--small
                      {% if "full-width-button" in modifiers %} Button--full-width {% endif %}
                    {% else %}
                      Card__action
                    {% endif %}
                  "
                  aria-hidden="true"
                  id="{{ content|slice(0, 20)|clean_id }}-action"
                >
                  {{ action_label ?: "Read more" }}
                </a>
              {% endif %}
            {% endblock %}
          </div>
        </div>
      {% endif %}
    {% endblock %}
  {% endembed %}
</div>
